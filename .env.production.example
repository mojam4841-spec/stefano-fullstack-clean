# Stefano Restaurant Production Environment Variables
# Copy this file to .env.production and fill in the values

# ===========================================
# CORE APPLICATION SETTINGS
# ===========================================
NODE_ENV=production
PORT=8080

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/stefano
POSTGRES_PASSWORD=your_secure_postgres_password

# ===========================================
# ADMIN PANEL SECURITY
# ===========================================
ADMIN_PASSWORD=stefano2025admin

# ===========================================
# API KEYS (All Optional - Configure as needed)
# ===========================================

# OpenAI API for AI Features
OPENAI_API_KEY=sk-...

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_live_...
VITE_STRIPE_PUBLIC_KEY=pk_live_...

# SendGrid Email Service
SENDGRID_API_KEY=SG....

# Twilio SMS Service
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+48...

# Google Analytics
VITE_GA_MEASUREMENT_ID=G-...

# Sentry Error Monitoring
VITE_SENTRY_DSN=https://...

# ===========================================
# SSL CERTIFICATE PATHS (for Docker deployment)
# ===========================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ===========================================
# PERFORMANCE TUNING
# ===========================================
# Maximum memory for Node.js process (in MB)
NODE_MAX_MEMORY=1024

# Number of PM2 instances (use 'max' for all CPU cores)
PM2_INSTANCES=max

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable performance monitoring
ENABLE_MONITORING=true